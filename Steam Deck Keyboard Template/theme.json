{
  "name": "Steam Deck Customizable Keyboard",
  "author": "KeeGooRoomiE",
  "version": "v1.0.0",
  "description": "Base keyboard theme with configurable rounding and palette via CSS variables.",
  "target": "Other",
  "manifest_version": 8,
  "inject": {
    "keyboard.css": ["bigpicture", "QuickAccess", "MainMenu"]
  },
  "patches": {
    "Keyboard Colors": {
      "default": "Custom",
      "type": "none",
      "values": {
        "Custom": {
          "components": [
            {
              "name": "Background Color",
              "type": "color-picker",
              "on": "Custom",
              "default": "#101015",
              "css_variable": "sdkb-bg-color",
              "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
            },
            {
              "name": "Key Background",
              "type": "color-picker",
              "on": "Custom",
              "default": "#1a1b22",
              "css_variable": "sdkb-key-bg",
              "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
            },
            {
              "name": "Key Background (Hover)",
              "type": "color-picker",
              "on": "Custom",
              "default": "#242633",
              "css_variable": "sdkb-key-bg-hover",
              "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
            },
            {
              "name": "Key Background (Pressed)",
              "type": "color-picker",
              "on": "Custom",
              "default": "#2f3242",
              "css_variable": "sdkb-key-bg-pressed",
              "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
            },
            {
              "name": "Key Border",
              "type": "color-picker",
              "on": "Custom",
              "default": "#2b2d3a",
              "css_variable": "sdkb-key-border-color",
              "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
            },
            {
              "name": "Key Border (Active)",
              "type": "color-picker",
              "on": "Custom",
              "default": "#3c3f52",
              "css_variable": "sdkb-key-border-color-active",
              "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
            },
            {
              "name": "Key Text",
              "type": "color-picker",
              "on": "Custom",
              "default": "#f5f5f7",
              "css_variable": "sdkb-key-text-color",
              "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
            },
            {
              "name": "Secondary Text",
              "type": "color-picker",
              "on": "Custom",
              "default": "#a0a3b5",
              "css_variable": "sdkb-key-text-secondary",
              "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
            },
            {
              "name": "Accent",
              "type": "color-picker",
              "on": "Custom",
              "default": "#00bfa5",
              "css_variable": "sdkb-accent",
              "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
            },
            {
              "name": "Accent Text",
              "type": "color-picker",
              "on": "Custom",
              "default": "#0b1015",
              "css_variable": "sdkb-accent-text",
              "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
            }
          ]
        }
      }
    },
    "Key Rounding": {
      "default": "Soft",
      "type": "dropdown",
      "values": {
        "Square": {
          "--sdkb-key-radius": ["0px", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-radius-special": ["0px", "bigpicture", "QuickAccess", "MainMenu"]
        },
        "Soft": {
          "--sdkb-key-radius": ["10px", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-radius-special": ["14px", "bigpicture", "QuickAccess", "MainMenu"]
        },
        "Pill": {
          "--sdkb-key-radius": ["20px", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-radius-special": ["24px", "bigpicture", "QuickAccess", "MainMenu"]
        }
      }
    }
  }
}