{
  "name": "Customizable Keyboard",
  "author": "KeeGooRoomiE",
  "version": "v1.0.4",
  "description": "Keyboard theme with configurable palette via CSS variables.",
  "target": "Other",
  "manifest_version": 8,
  "inject": {
    "keyboard.css": ["bigpicture", "QuickAccess", "MainMenu"]
  },
  "patches": {
    "Themes": {
      "default": "Default",
      "type": "dropdown",
      "values": {
        "Default": {
          "--sdkb-bg-color": ["#101015", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-bg": ["#1a1b22", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-bg-hover": ["#242633", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-bg-pressed": ["#2f3242", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-border-color": ["#2b2d3a", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-border-color-active": ["#3c3f52", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-text-color": ["#f5f5f7", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-text-secondary": ["#a0a3b5", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-accent": ["#00bfa5", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-accent-text": ["#0b1015", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-radius": ["6px", "bigpicture", "QuickAccess", "MainMenu"]
        },
        "White": {
          "--sdkb-bg-color": ["#e8eaed", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-bg": ["#f3f4f5", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-bg-hover": ["#e1e3e6", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-bg-pressed": ["#d7d9dc", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-border-color": ["#c9ccd0", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-border-color-active": ["#b7babd", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-text-color": ["#16181a", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-text-secondary": ["#5f6062", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-accent": ["#00b8ff", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-accent-text": ["#ffffff", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-radius": ["6px", "bigpicture", "QuickAccess", "MainMenu"]
        },
        "OLED Dark": {
          "--sdkb-bg-color": ["#000000", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-bg": ["#000000", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-bg-hover": ["#101015", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-bg-pressed": ["#101015", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-border-color": ["#2a2b30", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-border-color-active": ["#3a3d45", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-text-color": ["#d0d0d0", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-text-secondary": ["#7f828a", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-accent": ["#00b8ff", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-accent-text": ["#000000", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-radius": ["6px", "bigpicture", "QuickAccess", "MainMenu"]
        },
        "One Dark Style": {
          "--sdkb-bg-color": ["#1e2127", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-bg": ["#282c34", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-bg-hover": ["#303542", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-bg-pressed": ["#3b404c", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-border-color": ["#3b404c", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-border-color-active": ["#4b5263", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-text-color": ["#abb2bf", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-text-secondary": ["#5c6370", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-accent": ["#61afef", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-accent-text": ["#0b1015", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-radius": ["4px", "bigpicture", "QuickAccess", "MainMenu"]
        },
        "Marshmallow": {
          "--sdkb-bg-color": ["#fef7ff", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-bg": ["#ffeefa", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-bg-hover": ["#f7e5ff", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-bg-pressed": ["#eed8ff", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-border-color": ["#f0cde9", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-border-color-active": ["#e1b5ff", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-text-color": ["#4a3b5a", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-text-secondary": ["#9b7fae", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-accent": ["#ffb3c6", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-accent-text": ["#3d2430", "bigpicture", "QuickAccess", "MainMenu"],
          "--sdkb-key-radius": ["16px", "bigpicture", "QuickAccess", "MainMenu"]
        },
        "Custom": {}
      },
      "components": [
        {
          "name": "Keyboard Background",
          "type": "color-picker",
          "on": "Custom",
          "default": "#101015",
          "css_variable": "sdkb-bg-color",
          "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
        },
        {
          "name": "Key Base Color",
          "type": "color-picker",
          "on": "Custom",
          "default": "#1a1b22",
          "css_variable": "sdkb-key-bg",
          "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
        },
        {
          "name": "Key Hover Color",
          "type": "color-picker",
          "on": "Custom",
          "default": "#242633",
          "css_variable": "sdkb-key-bg-hover",
          "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
        },
        {
          "name": "Key Pressed Color",
          "type": "color-picker",
          "on": "Custom",
          "default": "#2f3242",
          "css_variable": "sdkb-key-bg-pressed",
          "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
        },
        {
          "name": "Key Border Color",
          "type": "color-picker",
          "on": "Custom",
          "default": "#2b2d3a",
          "css_variable": "sdkb-key-border-color",
          "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
        },
        {
          "name": "Key Active Border",
          "type": "color-picker",
          "on": "Custom",
          "default": "#3c3f52",
          "css_variable": "sdkb-key-border-color-active",
          "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
        },
        {
          "name": "Key Text Color",
          "type": "color-picker",
          "on": "Custom",
          "default": "#f5f5f7",
          "css_variable": "sdkb-key-text-color",
          "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
        },
        {
          "name": "Hint Text Color",
          "type": "color-picker",
          "on": "Custom",
          "default": "#a0a3b5",
          "css_variable": "sdkb-key-text-secondary",
          "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
        },
        {
          "name": "Accent Fill",
          "type": "color-picker",
          "on": "Custom",
          "default": "#00bfa5",
          "css_variable": "sdkb-accent",
          "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
        },
        {
          "name": "Accent Text Color",
          "type": "color-picker",
          "on": "Custom",
          "default": "#0b1015",
          "css_variable": "sdkb-accent-text",
          "tabs": ["bigpicture", "QuickAccess", "MainMenu"]
        }
      ]
    }
  }
}